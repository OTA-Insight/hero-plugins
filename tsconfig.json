{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": ".",
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "lib": ["es2018"],
        "allowJs": true,
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "incremental": true,
        "resolveJsonModule": true,
        "useUnknownInCatchVariables": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
    },
    "exclude": [],
    "include": ["./**/*.ts", "**/*.js", "package.json",],
}